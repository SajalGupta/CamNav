<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffee8b19"
    tools:context="com.example.sajal.camnav.NavigationDrawerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/FragmentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffee8b19"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="320dp"
            android:layout_height="140dp"

            android:layout_marginBottom="16dp"
            android:src="@mipmap/frag" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TheOneBelowThat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/FragmentLinearLayout"
        android:background="#DADADA"
        android:orientation="horizontal">

        <ListView

            android:id="@+id/gammaListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
